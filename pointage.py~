import datetime, time

class Employee(object):
    def __init__(self,name,prenom,age,date_debut,code):
        self.nom=name
        self.prenom=prenom
        self.age=age
        self.date_debut=''
        self.attendance_in=0
        self.attendance_out=0
        self.attendance_mois=''
        self.attendance_annee=''
        self.code=''
        

    def is_in(self):
        temps_arrivee = time()
        self.attendance_in =temps_arrivee
        return temps_arrivee
    def is_out(self):
        temps_sortie = time()
        self.attendance_out =temps_sortie
        return temps_sortie
